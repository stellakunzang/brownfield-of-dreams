<h1>Admin Dashboard</h1>
<h3>Tutorials</h3>

<div class="p2">
  <%= link_to "New Tutorial", new_admin_tutorial_path, class: "video-position-submit btn btn-outline" %>
</div>

<table class="col col-5">
  <tr>
    <th>Title</th>
    <th>Edit</th>
    <th>Delete</th>
    <th>Status</th>
    <th>Toggle</th>

  </tr>
  <% @facade.tutorials.each do |tutorial| %>
    <tr class="admin-tutorial-card">
      <td><%= link_to tutorial.title, tutorial_path(tutorial) %></td>
      <td>
        <%= link_to "Edit", edit_admin_tutorial_path(tutorial), method: :get, class: "video-position-submit btn btn-outline"%>
      </td>
      <td>
      <%= button_to "Delete", admin_tutorial_path(tutorial),
                               method: :delete,
                               data: { confirm: 'Are you sure?' } , class: "video-position-submit btn btn-outline"%>
      </td>
      <td>
        Classroom: <%=tutorial.classroom %>
      </td>
      <td>
        <%=button_to 'Toggle', "/admin/tutorials/#{tutorial.id}/update_classroom", method: :post, class: "video-position-submit btn btn-outline" %>
      </td>

    </tr>
  <% end %>
</table>
